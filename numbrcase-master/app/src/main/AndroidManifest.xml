<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.test_2">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.numbrcase.activities.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.numbrcase.activities.ContactActivity" />
        <activity
            android:name="com.numbrcase.activities.AddContactActivity"
            android:label="Contact"
            android:windowSoftInputMode="adjustPan" />
        <activity android:name="com.numbrcase.activities.SearchNearbyActivity" android:label="Search Devices"/>
        <activity android:name="com.numbrcase.activities.AcceptRequestActivity" android:label="Requests"/>
        <activity android:name="com.numbrcase.activities.MyAccountActivity" android:label="My Account"/>
        <activity android:name="com.numbrcase.activities.EditMyAccountActivity" android:label="My Account"></activity>
    </application>

</manifest>